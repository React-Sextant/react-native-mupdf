<?xml version="1.0" encoding="utf-8"?>
<ViewAnimator xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/annotationMultiple"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:onClick="onBubbling"
    android:layout_centerHorizontal="true">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#EE000000">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageButton
                    android:background="@drawable/button"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onPizhuClick"
                    android:src="@mipmap/pencil" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageButton
                    android:background="@drawable/button"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:tag="onPizhuClickLine"
                    android:onClick="onPizhuClick"
                    android:src="@mipmap/line" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageButton
                    android:background="@drawable/button"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:tag="onPizhuClickArrow"
                    android:onClick="onPizhuClick"
                    android:src="@mipmap/arrows" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageButton
                    android:background="@drawable/button"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:tag="onPizhuClickRectangle"
                    android:onClick="onPizhuClick"
                    android:src="@mipmap/rectangle" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageButton
                    android:background="@drawable/button"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:tag="onPizhuClickEllipse"
                    android:onClick="onPizhuClick"
                    android:src="@mipmap/ellipse" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</ViewAnimator>