<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MuPDFActivity">

    <com.artifex.mupdfdemo.MuPDFReaderView
        android:id="@+id/mu_pdf_mupdfreaderview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/same_screen_end"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/pdf_same_screen_btn"
            android:textColor="#FFFFFFFF"
            android:text="结束同屏"/>
    </LinearLayout>
    <include
        layout="@layout/pdf_tools"/>
</RelativeLayout>